{
    "name": "phrasey",
    "version": "2.0.20",
    "description": "A full-blown i18n build system.",
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "bin": "dist/bin/index.js",
    "scripts": {
        "build": "rimraf ./dist && tsc",
        "hot-cli": "tsx ./src/bin/index.ts",
        "docs:base:dev": "vitepress dev docs",
        "docs:base:build": "vitepress build docs",
        "docs:api:build": "node ./scripts/docs-api-json.js && typedoc --options ./typedoc.all.json",
        "docs:build": "rimraf ./docs-dist && npm run docs:base:build && npm run docs:api:build",
        "docs:deploy": "gh workflow run docs.yml"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/zyrouge/phrasey.git"
    },
    "keywords": [
        "i18n",
        "transpiler"
    ],
    "author": "Zyrouge",
    "license": "MIT",
    "dependencies": {
        "@zyrouge/phrasey-locales": "^1.1.9",
        "chokidar": "^3.5.3",
        "commander": "^11.0.0",
        "enquirer": "^2.3.6",
        "fast-glob": "^3.2.12",
        "fs-extra": "^11.1.1",
        "picocolors": "^1.0.0",
        "yaml": "^2.3.1",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.1",
        "@types/inquirer": "^9.0.3",
        "@types/node": "^20.2.5",
        "@zyrouge/phrasey-json": "file:subpackages/phrasey-json",
        "@zyrouge/phrasey-yaml": "file:subpackages/phrasey-yaml",
        "prettier": "^3.0.2",
        "rimraf": "^5.0.1",
        "tsx": "^3.12.10",
        "typedoc": "^0.24.8",
        "typescript": "^5.0.4",
        "vitepress": "^1.0.0-beta.3"
    }
}
